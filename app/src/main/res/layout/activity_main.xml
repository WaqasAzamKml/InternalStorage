<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.approsoft.internalstorage.MainActivity"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/etInputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter some text here..."
        android:lines="4"
        android:maxLines="4"
        android:gravity="top"/>
    <Button
        android:id="@+id/btnWriteToFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to File"/>
    <Button
        android:id="@+id/btnReadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read File"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvFileData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textIsSelectable="true"/>
    </ScrollView>

</LinearLayout>
